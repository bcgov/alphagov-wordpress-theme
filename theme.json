{
  "$schema": "https://schemas.wp.org/wp/6.5/theme.json",
  "version": 2,
  "templateParts": [
    {
      "title": "Header Container",
      "name": "header",
      "area": "header"
    },
    {
      "title": "Footer Container",
      "name": "footer",
      "area": "footer"
    }
  ],
  "styles": {
    "spacing": {
      "padding": {
        "top": "0px",
        "right": "2rem",
        "bottom": "0px",
        "left": "2rem"
      }
    }
  },
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1440px",
      "wideSize": "1440px"
    },
    "typography": {
      "fluid": true
    },
    "spacing": {
      "blockGap": null,
      "margin": true
    },
    "color": {
      "palette": [
        {
          "slug": "header-color-background",
          "color": "blue",
          "name": "Header background color"
        },
        {
          "slug": "menu-color-background",
          "color": "#ffffff",
          "name": "Menu background color"
        },
        {
          "slug": "typography-primary-color",
          "color": "#2d2d2d",
          "name": "Primary color"
        },
        {
          "slug": "foreground",
          "color": "var(--wp--preset--color--typography-primary-color)",
          "name": "Foreground"
        },
        {
          "slug": "background",
          "color": "#ffffff",
          "name": "Background"
        }
      ]
    }
  }
}